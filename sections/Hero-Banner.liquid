{% assign show_text = false %}
{% if section.settings.heading != blank or section.settings.description != blank or section.settings.button_text != blank %}
  {% assign show_text = true %}
{% endif %}

{% if show_text %}
  <div class="hero-banner-text-wrapper {% if section.settings.layout_direction == 'image_left' %}image-left{% else %}image-right{% endif %}">
    <div class="herobanner-container">
    {% if section.settings.layout_direction == 'image_left' %}
      <div class="hero-image-block">
        {% render 'responsive-picture', desktopImage: section.settings.banner_image , mobileImage:section.settings.mobile_banner_image  %}
      </div>
      <div class="hero-text-block">
        <div class="hero-text-inner">
          {% if section.settings.heading != blank %}
            <h2>{{ section.settings.heading }}</h2>
          {% endif %}
          {% if section.settings.description != blank %}
            <p>{{ section.settings.description }}</p>
          {% endif %}
          {% if section.settings.button_text != blank %}
            <a href="{{ section.settings.button_link }}" class="hero-button">{{ section.settings.button_text }}
      {% render 'icon-arrowsleft' %}
            </a>
          {% endif %}
        </div>
      </div>
</div>
    {% else %}
      <div class="hero-text-block">
        <div class="hero-text-inner">
          {% if section.settings.heading != blank %}
            <h2>{{ section.settings.heading }}</h2>
          {% endif %}
          {% if section.settings.description != blank %}
            <p class="desktop-description">{{ section.settings.description }}</p>
          {% endif %}
          {% if section.settings.description != blank %}
            <p class="mobile-description">{{ section.settings.mobile_description }}</p>
          {% endif %}
          {% if section.settings.button_text != blank%}
            <a href="{{ section.settings.button_link }}" class="hero-button">{{ section.settings.button_text }}
           {% render 'icon-showarrow' %}
            </a>
          {% endif %}
        </div>
      </div>
      <div class="hero-image-block">
        {% render 'responsive-picture', desktopImage: section.settings.banner_image ,mobileImage:section.settings.mobile_banner_image %}
      </div>
    {% endif %}
  </div>
{% else %}
  <div class="hero-image-only">
    {% render 'responsive-picture', desktopImage: section.settings.banner_image ,mobileImage:section.settings.mobile_banner_image %}
  </div>
{% endif %}


{% schema %}
{
  "name": "Hero Banner With Text",
  "tag": "section",
  "class": "hero-banner-text-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_banner_image",
      "label": "Mobile Banner Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "textarea",
      "id": "mobile_description",
      "label": "Description",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "select",
      "id": "layout_direction",
      "label": "Layout Direction",
      "options": [
        { "value": "image_right", "label": "Image Right / Text Left" },
        { "value": "image_left", "label": "Image Left / Text Right" }
      ],
      "default": "image_right"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner With Text",
      "category": "Image"
    }
  ]
}
{% endschema %}

